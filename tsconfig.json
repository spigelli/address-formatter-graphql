{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "outDir": "dist/",
    "sourceMap": true,
    "strict": true,
    "types": ["node"],
    "target": "es2020"
  }
}
